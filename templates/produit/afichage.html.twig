{% extends 'baseadmin.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}

<div  style="display: flex;align-items: center;justify-items: center;margin-left: 250px; padding: 50px;">
        <div class="card">
            <div class="card-body">
                <a href="{{ path('addProduit') }}"><i class="ri-arrow-left-circle-fill" style="font-size: 50px;"></i></a>
                <h5 class="card-title">Liste des Produit</h5>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>categorieProd</th>
            <th>libelle</th>
            <th>marque</th>
            <th>prix</th>
            <th>descriptionProd</th>
            <th>imageProd</th>
            <th>disponibilite</th>
            <th>note</th>
            <th>quantite</th>
            <th>Modification</th>
            <th>Suppression</th>
        </tr>
        </thead>
        <tbody>
        {% for produit in b %}
            <tr>
                <td>{{ produit.categorieProd }}</td>
                <td>{{ produit.libelle }}</td>
                <td>{{ produit.marque }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.descriptionProd }}</td>
                <td>{{ produit.imageProd }}</td>
                <td>{{ produit.disponibilite }}</td>
                <td>{{ produit.note }}</td>
                <td>{{ produit.quantite }}</td>
                <td>
                    <a class="btn btn-outline-secondary" href="{{ path('modifProduit',{'idProd':produit.idProd}) }}">Modifier</a>
                </td>
                <td>
                    <a  class="btn  btn-dark"  href="{{ path('supp_produit',{'idProd':produit.idProd}) }}">Supprimer</a>
                </td>


            </tr>

        {% endfor %}
        </tbody>
    </table>
            </div>


        </div>
        </div>
{% endblock %}
