{% extends 'baseadmin.html.twig'  %}
{% block body %}
	<div style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 50px; ">

		<div class="card">
			<div class="card-body">
				<h5 class="card-title">Ajouter Un Message</h5>

				<!-- General Form Elements -->

				{{ form_start(ch,{attr:{novalidate:'novalidate'}}) }}

				<label for="inputText" class="col-sm-6 col-form-label">Message</label>
				<div class="col-sm-10">
					{{ form_widget(ch.content,{'attr':{'class':'form-control'}}) }}
				</div>

				<label for="inputText" class="col-sm-6 col-form-label">id Stream</label>
				<div class="col-sm-10">
					{{ form_widget(ch.idStream,{'attr':{'class':'form-control'}}) }}
				</div>

				<br/>
				<div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

					{{ form_widget(ch.Envoyer,{'attr':{'class':'btn btn-primary'}}) }}
				</div>


				{{ form_end(ch) }}
			</div>
		</div>

	</div>
{% endblock %}