{% extends 'baseadmin.html.twig'  %}
{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 250px; padding: 40px;">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Modifier promotion</h5>

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}





                    <label for="inputText" class="col-sm-10 col-form-label">date Debut</label>
                    <div class="col-sm-15">
                        {{ form_widget(f.dateDebutProm,{'attr':{'class':'form-control'}}) }}

                    </div>





                    <label for="inputText" class="col-sm-10 col-form-label">date Fin</label>
                    <div class="col-sm-15">
                        {{ form_widget(f.dateFinProm,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.dateFinProm,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-10 col-form-label">taux Reduction</label>
                    <div class="col-sm-20">
                        {{ form_widget(f.tauxReduction,{'attr':{'class':'form-control'}}) }}

                    </div>

                    {{ form_errors(f.tauxReduction,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-10 col-form-label">idProd</label>
                    <div class="col-sm-15">
                        {{ form_widget(f.idProd,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.idProd,{'attr':{'class':'text-danger'}}) }}
                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>


                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %}