{% extends 'baseadmin.html.twig'  %}
{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 250px; padding: 40px;">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Modifier promotion</h5>

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}





                    <label for="inputText" class="col-sm-10 col-form-label">dateDebutProm</label>
                    <div class="col-sm-15">
                        {{ form_widget(f.dateDebutProm,{'attr':{'class':'form-control'}}) }}

                    </div>

                    <label for="inputText" class="col-sm-10 col-form-label">dateFinProm</label>
                    <div class="col-sm-15">
                        {{ form_widget(f.dateFinProm,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <label for="inputText" class="col-sm-10 col-form-label">tauxReduction</label>
                    <div class="col-sm-15">
                        {{ form_widget(f.tauxReduction,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>


                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %}