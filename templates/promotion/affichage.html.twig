{% extends 'baseadmin.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}

    <div  style="display: flex;align-items: center;justify-items: center;margin-left: 250px; padding: 100px;">
        <div class="card">
            <div class="card-body">
                <a href="{{ path('addPromotion') }}"><i class="ri-arrow-left-circle-fill" style="font-size: 50px;"></i></a>
                <h5 class="card-title">Liste des Promotion</h5>
                <table class="table table-striped">
                    <thead>
                    <tr>

                        <th>id produit</th>
                        <th>tauxReduction</th>
                        <th>dateDebutProm</th>
                        <th>dateFinProm</th>


                        <th>Modification</th>
                        <th>Suppression</th>
                </tr>
                </thead>
                <tbody>
                {% for promotion in s %}
                    <tr>
                        <td>{{ promotion.idProd }}</td>
                        <td>{{ promotion.tauxReduction }}</td>
                        <td> {{ promotion.dateDebutProm|date("m/d/Y") }}</td>
                        <td> {{ promotion.dateFinProm|date("m/d/Y") }}</td>
                        <td>
                            <a class="btn btn-outline-secondary" href="{{ path('modifPromotion',{'idProm':promotion.idProm}) }}">Modifier</a>
                        </td>

                        <td>
                            <a class="btn btn-danger" href="{{ path('supp_promotion',{'idProm':promotion.idProm}) }}">Supprimer</a>
                        </td>





                    </tr>

                {% endfor %}
                </tbody>
            </table>
    </div>


    </div>
    </div>
{% endblock %}
