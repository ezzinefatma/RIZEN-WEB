{% extends 'baseadmin.html.twig'  %}
{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add Blog Backend ADMIN</h5>

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                    <label for="inputText" class="col-sm-5 col-form-label">nom</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.nom,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.nom,{'attr':{'class':'text-danger'}}) }}




                    <label for="inputText" class="col-sm-5 col-form-label">prenom</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.prenom,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.prenom,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-5 col-form-label">ville</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.ville,{'attr':{'class':'form-control'}}) }}
                    </div>
                    {{ form_errors(f.ville,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-5 col-form-label">adresse</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.adresse,{'attr':{'class':'form-control'}}) }}
                    </div>
                    {{ form_errors(f.adresse,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-5 col-form-label">tele</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.tele,{'attr':{'class':'form-control'}}) }}
                    </div>
                        {{ form_errors(f.tele,{'attr':{'class':'text-danger'}}) }}

                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %}