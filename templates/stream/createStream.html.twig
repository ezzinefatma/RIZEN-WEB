{% extends 'baseadmin.html.twig'  %}
{% block body %}
	<div style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 50px; ">

		<div class="card">
			<div class="card-body">
				<h5 class="card-title">Ajouter un Stream</h5>

				<!-- General Form Elements -->
				{{ form_start(f,{attr:{novalidate:'novalidate'}}) }}


						<label for="inputText" class="col-sm-6 col-form-label">Titre de Stream</label>
						<div class="col-sm-10">
							{{ form_widget(f.titreStream,{'attr':{'class':'form-control'}}) }}
						</div>
				{{ form_errors(f.titreStream,{'attr':{'class':'text-danger'}}) }}


					<label for="inputText" class="col-sm-4 col-form-label">Categorie</label>
					<div class="col-sm-10">
						{{ form_widget(f.categorie,{'attr':{'class':'form-control'}}) }}
					</div>
				{{ form_errors(f.categorie,{'attr':{'class':'text-danger'}}) }}

					<label for="inputText" class="col-sm-4 col-form-label">Url</label>
					<div class="col-sm-10">
						{{ form_widget(f.url,{'attr':{'class':'form-control'}}) }}
					</div>
				{{ form_errors(f.url,{'attr':{'class':'text-danger'}}) }}
					<label for="inputText" class="col-sm-4 col-form-label">Status</label>
					<div class="col-sm-10">
						{{ form_widget(f.status,{'attr':{'class':'form-control'}}) }}
					</div>
				{{ form_errors(f.status,{'attr':{'class':'text-danger'}}) }}

					<label for="inputText" class="col-sm-6 col-form-label">Photo d'arri√®re plan</label>
					<div class="col-sm-10">
						{{ form_widget(f.backgroundPic,{'attr':{'class':'form-control'}}) }}
					</div>
				{{ form_errors(f.backgroundPic,{'attr':{'class':'text-danger'}}) }}
                <br/>
				<div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

					{{ form_widget(f.Ajouter,{'attr':{'class':'btn btn-primary'}}) }}
				</div>


				{{ form_end(f) }}
						</div>
		</div>

	</div>
{% endblock %}