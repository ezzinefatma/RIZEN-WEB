{% extends 'baseadmin.html.twig'  %}
{% block body %}
	<div style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 50px; ">

		<div class="card">
			<div class="card-body">
				<h5 class="card-title">Modifier un Stream</h5>

				<!-- General Form Elements -->
				{{ form_start(f1) }}


				<label for="inputText" class="col-sm-6 col-form-label">Titre de Stream</label>
				<div class="col-sm-10">
					{{ form_widget(f1.titreStream,{'attr':{'class':'form-control'}}) }}
				</div>


				<label for="inputText" class="col-sm-4 col-form-label">Categorie</label>
				<div class="col-sm-10">
					{{ form_widget(f1.categorie,{'attr':{'class':'form-control'}}) }}
				</div>


				<label for="inputText" class="col-sm-4 col-form-label">Url</label>
				<div class="col-sm-10">
					{{ form_widget(f1.url,{'attr':{'class':'form-control'}}) }}
				</div>

				<label for="inputText" class="col-sm-4 col-form-label">Status</label>
				<div class="col-sm-10">
					{{ form_widget(f1.status,{'attr':{'class':'form-control'}}) }}
				</div>


				<label for="inputText" class="col-sm-6 col-form-label">Photo d'arri√®re plan</label>
				<div class="col-sm-10">
					{{ form_widget(f1.backgroundPic,{'attr':{'class':'form-control'}}) }}
				</div>
				<br/>
				<div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

					{{ form_widget(f1.Modifier,{'attr':{'class':'btn btn-primary'}}) }}
				</div>


				{{ form_end(f1) }}
			</div>
		</div>

	</div>
{% endblock %}