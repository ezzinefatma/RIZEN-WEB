{% extends 'baseUser.html.twig'%}
{%block body%}
    <section class="blog-details spad">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <div class="blog__details__title">
                        <h6><span> {{post.datePub|date('Y-M-d a h:m:s')}}</span></h6>
                        <h2>{{ post.titlePub}}</h2>
                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="blog__details__content">

                        <div class="blog__details__item__text">
                            <img src="{{ asset('../../uploads/' ~ post.image) }}" alt="">
                            <p>{{post.contentPub}}</p>
                        </div>
                        <div class="blog__details__item__text">
                        <a href="#">Like</a>

                        </div>

                        <!---------------COMMMENTTTTSS------------>

                        <div class="blog__details__comment">

                            <h4>Comments</h4>
                         {% for c in comments %}
                             {%if c.approuve!=0 %}
                            <div class="blog__details__comment__item">
                                <div class="blog__details__comment__item__pic">
                                    <img src="../../assetsUser/img/blog/details/comment-3.png" alt="">
                                </div>
                                <div class="blog__details__comment__item__text">
                                    <span>{{c.dateCom|date('Y-M-d a h:m:s')}}</span>
                                    <h5>{{c.username}}</h5>
                                    <p>{{c.contentCom}}</p>

                                </div>
                            </div>
                             {%endif%}
                            {%endfor%}
                        </div>
                        <div class="blog__details__form">

                            <h4>Leave A Commnet</h4>
                            <form method="POST" action="{{ url('add_comment',{'id': ide}) }}" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-6">
                                        <input type="text" placeholder="Name" name="input_name">
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6">
                                        <input type="text" placeholder="Email" name="input_email">
                                    </div>
                                    <div class="col-lg-12">
                                        <textarea placeholder="Message" name="input_content"></textarea>
                                        <button type="submit" class="site-btn">Send Message</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Blog Details Section End -->

{%endblock%}