{% extends 'baseadmin.html.twig'%}
{%block body%}
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Add a new post </h5>

            <!-- General Form Elements -->
            {{ form_start(form) }}
            <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">

                    {{ form_widget(form.titlePub, {'attr': {'class': 'form-control'}}) }}

                </div>
            </div>









            <div class="row mb-3">
                <label for="inputPassword" class="col-sm-2 col-form-label">Content</label>
                <div class="col-sm-10">
                    {{ form_widget(form.contentPub, {'attr': {'class': 'form-control','style' : 'height: 100px'}}) }}

                </div>
            </div>




            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Submit Button</label>
                <div class="col-sm-10">

                    {{ form_row(form.submit, { 'label': 'Submit' }) }}


                </div>
            </div>


            {{ form_start(form) }}



        </div>
    </div>
{%endblock%}



